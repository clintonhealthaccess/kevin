<?xml version="1.0" encoding="UTF-8"?>

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd" 
         maxBytesLocalOnHeap="60m" maxBytesLocalOffHeap="60m" maxBytesLocalDisk="5g">

    <diskStore path="java.io.tmpdir"/>

    <cacheManagerEventListenerFactory class="" properties=""/>

    <defaultCache
    		eternal="false"
            maxElementsInMemory="500"
            timeToLiveSeconds="86400"
            overflowToDisk="false"
            diskPersistent="false"
    />

    <cache name="org.hibernate.cache.UpdateTimestampsCache"
           maxElementsInMemory="10000"
            timeToLiveSeconds="86400"
    />

    <cache name="org.hibernate.cache.StandardQueryCache"
           maxElementsInMemory="500"
            timeToLiveSeconds="86400"
    />
    
   	<cache name="org.chai.kevin.location.CalculationEntity"
           maxElementsInMemory="5000"
           timeToLiveSeconds="86400"
    />
    
   	<!-- cache name="org.chai.kevin.location.LocationEntity"
           maxElementsInMemory="5000"
           timeToLiveSeconds="86400"
    / -->
    
    <!-- cache name="org.chai.kevin.location.DataLocationEntity"
           maxElementsInMemory="5000"
           timeToLiveSeconds="86400"
    / -->
    
    <cache name="org.chai.kevin.location.LocationLevel"
           maxElementsInMemory="100"
            timeToLiveSeconds="86400"
    />
    
    <cache name="locationLevelListQueryCache"
           maxElementsInMemory="100"
            timeToLiveSeconds="86400"
    />
    
    <cache name="org.chai.kevin.location.DataEntityType"
           maxElementsInMemory="100"
           timeToLiveSeconds="86400"
    />
    
    <cache name="dataEntityTypeListQueryCache"
           maxElementsInMemory="100"
            timeToLiveSeconds="86400"
    />
    
    <cache name="org.chai.kevin.location.LocationEntity.children"
           maxElementsInMemory="5000"
            timeToLiveSeconds="86400"
    />
    
    <cache name="org.chai.kevin.location.LocationEntity.dataEntities"
           maxElementsInMemory="2000"
            timeToLiveSeconds="86400"
    />
    
    <cache name="org.chai.kevin.Period"
           maxElementsInMemory="10"
            timeToLiveSeconds="86400"
    />
    
    <cache name="org.chai.kevin.data.RawDataElement"
           maxElementsInMemory="4000"
            timeToIdleSeconds="60"
    />
    
    <cache name="org.chai.kevin.data.Expression"
			maxElementsInMemory="4000"
            timeToIdleSeconds="60"
    />
    
    <cache name="org.chai.kevin.data.Calculation"
			maxElementsInMemory="4000"
			timeToIdleSeconds="60"
    />
    
    <cache name="dsrCache"
    		maxElementsInMemory="4000"
    		timeToIdleSeconds="86400"
    />

    <cache name="fctCache"
    		maxElementsInMemory="4000"
    		timeToIdleSeconds="86400"
    />
    
    <cache name="dashboardCache"
    		maxElementsInMemory="4000"
    		timeToIdleSeconds="86400"
    />

	<!-- short term cache for json values, to speed up survey save -->
    <cache name="jsonValueCache"
    		maxElementsInMemory="100"
    		timeToLiveSeconds="0"
    		timeToIdleSeconds="10"
    />
    
    <!-- short term cache for survey entered values, to speed up survey save -->
    <cache name="org.chai.kevin.survey.validation.FormEnteredValue"
    		maxElementsInMemory="1000"
    		timeToLiveSeconds="0"
    		timeToIdleSeconds="60"
    />
    <cache name="formEnteredValueQueryCache"
    		maxElementsInMemory="1000"
    		timeToLiveSeconds="0"
    		timeToIdleSeconds="60"
    />
    
</ehcache>