<?xml version="1.0" encoding="UTF-8"?>

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd" 
         maxBytesLocalOnHeap="60m" maxBytesLocalOffHeap="60m" maxBytesLocalDisk="5g">

    <diskStore path="java.io.tmpdir"/>

    <cacheManagerEventListenerFactory class="" properties=""/>

    <defaultCache
    		eternal="false"
            maxElementsInMemory="500"
            timeToLiveSeconds="3600"
            overflowToDisk="false"
            diskPersistent="false"
    />

    <cache name="org.hibernate.cache.UpdateTimestampsCache"
           maxElementsInMemory="10000"
            timeToLiveSeconds="3600"
    />

    <cache name="org.hibernate.cache.StandardQueryCache"
           maxElementsInMemory="500"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.hisp.dhis.organisationunit.OrganisationUnit.children"
           maxElementsInMemory="5000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.hisp.dhis.organisationunit.OrganisationUnit.groups"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.hisp.dhis.period.Period"
           maxElementsInMemory="10"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.hisp.dhis.organisationunit.OrganisationUnit"
           maxElementsInMemory="5000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.data.DataElement"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.data.Expression"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.data.Calculation"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.value.DataValue"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.value.ExpressionValue"
           maxElementsInMemory="4000"
            timeToLiveSeconds="3600"
    />
    
    <cache name="org.chai.kevin.value.CalculationValue"
           maxElementsInMemory="2000"
            timeToLiveSeconds="3600"
    />
    
    <!-- not sure it is used -->
    <cache name="org.hibernate.cache.DataValueQueryCache"
           maxElementsInMemory="4000"
            timeToLiveSeconds="3600"
    />
    
	<cache name="org.hibernate.cache.ExpressionValueQueryCache"
           maxElementsInMemory="8000"
            timeToLiveSeconds="3600"
    />
    
	<cache name="org.hibernate.cache.CalculationValueQueryCache"
           maxElementsInMemory="4000"
            timeToLiveSeconds="3600"
    />
    
</ehcache>